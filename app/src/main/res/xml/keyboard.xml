<Keyboard xmlns:android="http://schemas.android.com/apk/res/android"
          android:keyWidth="25%p"
          android:horizontalGap="5px"
          android:verticalGap="5px"
          android:keyHeight="10%p">
    <Row android:keyboardMode="@integer/ipv4_mode">
        <Key android:codes="49" android:keyLabel="1" android:keyEdgeFlags="left"/>
        <Key android:codes="50" android:keyLabel="2"/>
        <Key android:codes="51" android:keyLabel="3"/>
        <Key android:codes="47" android:keyLabel="/" android:keyEdgeFlags="right"/>
    </Row>
    <Row android:keyboardMode="@integer/ipv4_mode">
        <Key android:codes="52" android:keyLabel="4" android:keyEdgeFlags="left"/>
        <Key android:codes="53" android:keyLabel="5"/>
        <Key android:codes="54" android:keyLabel="6"/>
        <Key android:codes="46" android:keyLabel="." android:keyEdgeFlags="right"/>
    </Row>
    <Row android:keyboardMode="@integer/ipv4_mode">
        <Key android:codes="55" android:keyLabel="7" android:keyEdgeFlags="left"/>
        <Key android:codes="56" android:keyLabel="8"/>
        <Key android:codes="57" android:keyLabel="9"/>
        <Key android:codes="-5" android:keyIcon="@mipmap/sym_keyboard_delete_lxx_light" android:isRepeatable="true" android:keyEdgeFlags="right"/>
    </Row>
    <Row  android:keyboardMode="@integer/ipv4_mode" android:rowEdgeFlags="bottom">
        <Key android:codes="55000" android:keyLabel="IPv6" android:keyEdgeFlags="left"/>
        <Key android:codes="48" android:keyLabel="0"/>
        <Key android:codes="32" android:keyIcon="@mipmap/sym_keyboard_space_lxx_light"/>
        <Key android:codes="-4" android:keyIcon="@mipmap/unbundled_check_02" android:keyEdgeFlags="right"/>
    </Row>

    <Row android:keyboardMode="@integer/ipv6_mode">
        <Key android:codes="97" android:keyLabel="A" android:keyEdgeFlags="left"/>
        <Key android:codes="98" android:keyLabel="B"/>
        <Key android:codes="99" android:keyLabel="C"/>
        <Key android:codes="47" android:keyLabel="/" android:keyEdgeFlags="right"/>
    </Row>
    <Row android:keyboardMode="@integer/ipv6_mode">
        <Key android:codes="100" android:keyLabel="D" android:keyEdgeFlags="left"/>
        <Key android:codes="101" android:keyLabel="E"/>
        <Key android:codes="102" android:keyLabel="F"/>
        <Key android:codes="58" android:keyLabel=":" android:keyEdgeFlags="right"/>
    </Row>
    <Row android:keyboardMode="@integer/ipv6_mode">
        <Key android:codes="55001" android:keyLabel="::" android:keyEdgeFlags="left"/>
        <Key android:codes="55002" android:keyLabel="/128"/>
        <Key android:codes="55003" android:keyLabel="/64"/>
        <Key android:codes="-5" android:keyIcon="@mipmap/sym_keyboard_delete_lxx_light" android:isRepeatable="true" android:keyEdgeFlags="right"/>
    </Row>
    <Row  android:keyboardMode="@integer/ipv6_mode" android:rowEdgeFlags="bottom">
        <Key android:codes="55000" android:keyLabel="IPv4" android:keyEdgeFlags="left"/>
        <Key android:codes="55004" android:keyLabel=""/> <!-- blank key -->
        <Key android:codes="32" android:keyIcon="@mipmap/sym_keyboard_space_lxx_light"/>
        <Key android:codes="-4" android:keyIcon="@mipmap/unbundled_check_02" android:keyEdgeFlags="right"/>
    </Row>
</Keyboard>